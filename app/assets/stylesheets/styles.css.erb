@charset "UTF-8";
/* CSS Document */

#wrap {
	width:1024px;
	margin:0 auto;
	background-color: #f8dbaf;
	background-image: url(<%= image_path 'contentbkg3.jpg' %>);
	background-repeat: repeat-x;
	background-position: top;
}

body,
html {
	margin-top: 20px;
	padding:0;
	color:#333;
	background:#ae7436;
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	line-height: 20px;
}
.redtext1 {
	font-size: 20px;
	font-style: italic;
	color: #F00;
	line-height: 22px;
}
.redtext2 {
	font-size: 20px;
	font-weight: bold;
	color: #900;
}
#usagencieslink {
	float: right;
}
#happylogo {
	float: left;
}

a:link {
	color: #900;
	font-weight: bold;
	text-decoration: none;
}
a:visited {
	color: #900;
	text-decoration: none;
}
a:hover {
	text-decoration: underline;
}
a:active {
	text-decoration: none;
}

label
{
width: 6em;
float: left;
text-align: right;
margin-right: 0.5em;
display: block
}


.submit input
{
margin-left: 4.5em;
}



#header {
	padding:0px;
	background:#ddd; 
	width: 1024px;
	height: 400px;
	
}

h1 {
margin:0;
}

h2 {
margin:0 0 1em;
}

#nav {
	background-color: #900;
	background-image: url(<%= image_path 'navbarbkg.jpg' %>);
	background-repeat: repeat-x;
	padding-top: 10px;
	padding-right: 10px;
	padding-bottom: 10px;
	padding-left: 40px;
	color: #FFF;
	font-family: 'Poly', serif;
	font-size: 16px;
	font-weight: normal;
	letter-spacing: 1px;
}

#sidebar {
	float:right;
	width:381px;
	padding-top: 10px;
	padding-right: 0px;
	padding-bottom: 0px;
	padding-left: 0px;
}

#footer {
	clear:both;
	background-color: #d0a16d;
    background-image: url(<%= image_path 'footerbkg.jpg' %>);	
	background-repeat: repeat-x;
	height: 150px;
	padding-top: 5px;
	padding-right: 10px;
	padding-bottom: 5px;
	padding-left: 10px;
}
#wrap #footer #usagencieslink {
	font-size: 18px;
	color: #FFF;
}
.bottomlogo {
	padding-left: 270px;
}
.clear {
	clear: both;
}

#footer p {
margin:0;
}

#main {
	float:left;
	width:570px;
	padding-top: 10px;
	padding-right: 10px;
	padding-bottom: 10px;
	padding-left: 40px;
}
.mycommpadding {
	padding-left: 30px;
	padding-top: 30px;
}

#nav a {
	color: #ffffff;
	text-decoration: none;
}
#nav a:visited {
	text-decoration: none;
}
#nav a:hover {
	text-decoration: none;
	color: #f8dbaf;
}
 #nav a:active {
	text-decoration: none;
}

#nav ul {
	margin:0;
	list-style:none;
	padding-top: 0;
	padding-right: 0;
	padding-bottom: 0;
	padding-left: 0;
}
.navspace {
	padding-right: 10px;
	padding-left: 10px;
}

#nav li {
	display:inline;
	margin:0;
	padding-top: 0;
	padding-right: 0;
	padding-bottom: 0;
	padding-left: 0;
}

* html #footer {
height:1px;
}
.entersubhead {
	font-size: 18px;
	font-weight: bold;
	color: #a65510;
	line-height: 30px;
}
.smallital {
	font-size: 12px;
	font-style: italic;
}
.contest {
	font-size: 12px;
}
