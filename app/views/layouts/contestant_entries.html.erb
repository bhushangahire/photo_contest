<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <div id="wrap">
       <%= render 'layouts/header' %>
       <%= render 'layouts/admin_nav' %>
      <div id="main_gallery"> 
        <section>
          <% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}")  unless value ="Success" %>
          <% end %>
          <%= yield %>        
        </section>
      </div>
      <div id="sidebar_gallery">
      </div><!-- sidebar -->
     <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
   </body>
</html>

