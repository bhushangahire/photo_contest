<div id="sign_up_form">
<h2>Picture Yourself as a Winner</h2>
<h1>Enter Here to Win!</h1>

<%= form_for @contestant, :html =>{:multipart => true} do |f| %>
  
    <% if @contestant.errors.any? %>
    <div id="error_explanation">
      <h2>Errors prohibited this post from being saved</h2>
      
      <ul>
      <% @contestant.errors.full_messages.each do |msg| %>                        
        <% if msg.include?  "Contestant entries is invalid" %>
          <% @contestant.contestant_entries.last.errors.full_messages.each  do | entry_msg | %>
            <li><%= entry_msg  %></li>    
          <% end %>
        <% else %>
            <li><%= msg %></li>
        <% end %>
        
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <!-- email for contestant -->
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <!-- other fields for constetant entry -->
  <%= fields_for ContestantEntry.new do |current_entry_form|  %> 
  <div class="field">
    <%= current_entry_form.label :first_name %>
    <%= current_entry_form.text_field :first_name %>
  </div>
  <div class="field">
    <%= current_entry_form.label :last_name %>
    <%= current_entry_form.text_field :last_name %>
  </div>
  <div class="field">
    <%= current_entry_form.label :address %>
    <%= current_entry_form.text_field :address %>
  </div>
  <div class="field">
    <%= current_entry_form.label :city %>
    <%= current_entry_form.text_field :city %>
  </div>
  <div class="field">
    <%= current_entry_form.label :state %>
    <%= current_entry_form.text_field :state %>
  </div>  
  <div class="field">
    <%= current_entry_form.label :zip %>
    <%= current_entry_form.text_field :zip %>
  </div>
  <div class="field">
    <%= current_entry_form.label :phone %>
    <%= current_entry_form.text_field :phone %>
  </div>
  <div class="field"> 
    <%= current_entry_form.label :photographer %>    
    <%= current_entry_form.text_field :photographer %>
  </div>
  <div class="field">
    <%= current_entry_form.label :location %>    
    <%= current_entry_form.text_field :location %>
  </div>
  <div class="field">
    <%= current_entry_form.label :photo %>
    <%= current_entry_form.file_field :photo %>    
  </div> 
  <div class="field">
    <%= current_entry_form.label :contest_source, ('How did you hear about this contest?') %>
    <%= select(:contestant_entry, :contest_source, 
                [['Email', 'Email'], ['Friend', 'Friend']]
                
              ) 
    %>
  </div>
  
  <div class="field" id="rules">
    <%= current_entry_form.label :agreed_to_rules,  ("I have read the offical rules of USAgencies Picture This! Calendar Contest and agree to the contests's
terms and conditions.")  %>
    <%= current_entry_form.check_box :agreed_to_rules %>
  </div>
  
 <% end %>
<!--<h3 class="step"> 3. Click Submit and you're all set! </h3> -->
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>



