<%= form_for @contestant, :html =>{:multipart => true} do |f| %>
  
    <% if @contestant.errors.any? %>
    <div id="error_explanation">
      <h2>Errors prohibited this post from being saved</h2>      
      <ul>
      <% @contestant.errors.full_messages.each do |msg| %>                        
        <% if msg.include?  "Contestant entries is invalid" %>
          <% @contestant.contestant_entries.last.errors.full_messages.each  do | entry_msg | %>
            <li><%= entry_msg  %></li>    
          <% end %>
        <% else %>
            <li><%= msg %></li>
        <% end %>
        
      <% end %>
      </ul>
    </div>
  <% end %>
  
    <p><span class="entersubhead">1. Upload your picture.&nbsp; &nbsp;</span>       
